<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="ATSTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DayNight" parent="Theme.MaterialComponents.DayNight">

    </style>

    <style name="Widget.ATS.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <!-- Toolbar should always be within an AppBarLayout which provides the background. -->
        <item name="android:background">@null</item>
    </style>

    <style name="ThemeOverlay.ATS.AppBarLayout" parent="">
        <item name="android:textColorPrimary">?attr/colorOnPrimarySurface</item>
        <item name="colorControlNormal">?attr/colorOnPrimarySurface</item>
        <item name="android:popupTheme" tools:targetApi="lollipop">@style/Theme.ATS.PopupMenu</item>
        <item name="popupTheme">@style/Theme.ATS.PopupMenu</item>
    </style>

    <style name="Theme.ATS.PopupMenu" parent="">
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="colorControlNormal">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Catalog.ChoosePreferencesButton" parent="Widget.ATS.TocButton">
        <item name="android:id">@id/topic_setting_button</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="srcCompat">@drawable/ic_setting</item>
        <item name="android:contentDescription">@string/topic_appbar_setting</item>
    </style>

    <style name="Widget.ATS.TocButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/mtrl_min_touch_target_size</item>
        <item name="android:layout_height">@dimen/mtrl_min_touch_target_size</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>


</resources>
